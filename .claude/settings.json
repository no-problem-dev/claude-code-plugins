{
  "marketplaces": [
    {
      "name": "anthropic-official",
      "source": "https://github.com/anthropics/claude-code"
    }
  ],
  "plugins": [
    "plugin-dev@anthropic-official"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/plugins/notify-on-stop/scripts/notify.sh stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/plugins/notify-on-stop/scripts/notify.sh notification"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/plugins/notify-on-stop/scripts/notify.sh subagent"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/plugins/notify-on-stop/scripts/notify.sh permission"
          }
        ]
      }
    ]
  }
}
